    <div class="form-item">
        <label>Splitter</label>
        <input type="number" name="splitter" min="20" max="80" step="5" value="<%= player.splitter %>">
    </div>
    <div class="form-item">
        <label>Control</label>
        <input type="number" name="control" min="20" max="80" step="5" value="<%= player.control %>">
    </div>
</div>


<div class="form-row">
    <div class="form-item form-item-no-grow">
         <label>Image</label>
        <input type="file" name="plimage" class="player-image filepond">
    </div>

    <div class="form-item">
    <label>Description</label>
    <textarea  name="description"><%= player.description %></textarea>
    </div>

</div>



